rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /prop_lifecycle/{docId} {
      // Allow reads and writes by any authenticated user.
      // The application logic, including the "Data Doctor", is now responsible 
      // for maintaining data integrity.
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}