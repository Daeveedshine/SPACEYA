rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Secure rules for the 'users' collection
    match /users/{userId} {
      // Allow a user to be created if the person creating it is the user themselves.
      // This prevents users from creating accounts for others.
      allow create: if request.auth.uid == userId;

      // Allow a user to read and update their own data.
      // This is important for profile updates.
      allow read, update: if request.auth.uid == userId;

      // Prevent users from deleting their own account through this rule.
      // Deletion should be handled by a more secure, server-side process.
      allow delete: if false;
    }

    // Rules for the single document storing the entire application state.
    // WARNING: This architecture is not recommended. Storing all state in one
    // document can lead to security issues and performance bottlenecks.
    match /prop_lifecycle/{docId} {
      // Allow any authenticated user to read and write the application state.
      // This is required for the application to function as designed,
      // but it means any user can overwrite the entire database.
      allow read, write: if request.auth != null;
    }
  }
}
